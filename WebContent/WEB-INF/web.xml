<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ict_erp</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/views/index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>DepartService</param-name>
    <param-value>com.ict.erp.service.impl.DepartServiceImpl</param-value>
  </context-param>
  <servlet>
    <servlet-name>ViewServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.ViewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewServlet</servlet-name>
    <url-pattern>/views/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LevelServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.LevelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LevelServlet</servlet-name>
    <url-pattern>/level/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MenuServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.MenuServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MenuServlet</servlet-name>
    <url-pattern>/menui/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MemberServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.MemberServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberServlet</servlet-name>
    <url-pattern>/member/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MusicServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.MusicServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MusicServlet</servlet-name>
    <url-pattern>/music/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TicketMovieServlet</servlet-name>
    <servlet-class>com.ict.erp.controller.TicketMovieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TicketMovieServlet</servlet-name>
    <url-pattern>/ticketMovie/*</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/error/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/error/500.jsp</location>
  </error-page>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.ict.erp.filer.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>